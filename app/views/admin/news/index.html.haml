= link_to 'Přidat novinku', new_admin_news_path
%br
%br
%table
  %tr
    %th
    %th Titulek
    %th Text   
    %th Návštěvnost
    %th Vytvořeno
    %th Upraveno
    %th Obrázek
    %th Editace
    =#%th Odstranit 
  - @news.each_with_index do |new, index|
    %tr{:class => cycle('odd', 'even') }
      %td= "#{index + 1}." 
      %td= new.title
      %td= truncate(h(new.perex), :length => 180, :omission => '&hellip;')
      %td= new.hits
      %td= formatted_date(new.created_at)
      %td= formatted_date(new.updated_at)
      %td= image_tag new.photo.url(:thumb)
      %td= link_to 'Upravit', :controller => 'news', :action => 'edit', :id => new
      -#%td= link_to 'Odstranit', {:controller=>"admin/galleries", :action=>"destroy", :id => gallery}, :confirm => 'Jste si jistí?', :method => :delete
      %td
%br 
= will_paginate @news, :previous_label => '<< Předchozí', :next_label => 'Další >>'
