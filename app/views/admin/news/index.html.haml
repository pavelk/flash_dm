%h4
  Celkem
  = @news.total_entries
  novinek
.left  
  %form{:action => "/admin/news/index", :method => "get"}
    %select{:id => "pagingSelector", :name => "pagingSelector", :onchange => "submit()"}
      %option{:value =>"all"} -- Stránkování --
      %option{:value => "50"} 50
      %option{:value => "100"} 100
      %option{:value => "300"} 300
    po 
    = params[:pagingSelector]
