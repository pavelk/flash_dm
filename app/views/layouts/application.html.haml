    :javascript
      function openWindow(url, name, width, height, x, y) 
      {
        var params = "height=" + height + ",width=" + width + ",toolbar=1,scrollbars=1,location=1,statusbar=1,menubar=1,resizable=1,top=" + x + ",left=" + y;
        var popup = window.open(url, name, params);
        return popup != null && typeof(popup) != "undefined";
      }
    :javascript
      function remove() 
      {
        swfobject.removeSWF("flashDiv");
        create("600");
      }
    :javascript
      function changeback() 
      {
        swfobject.removeSWF("flashDiv");
        create("768");
      }      
    :javascript
      function create(h) 
      {
        var d = document.createElement("div");
        d.setAttribute("id", "flashDiv");
        document.getElementById("helper").appendChild(d);
        var att = { data:"/DobraMama_01.swf", width:"100%", height:h };
        var par = { menu:"false", flashvars:"shopping=#{params[:shopping]}&gallery=#{params[:gallery]}" };
        var id = "flashDiv";
        swfobject.createSWF(att, par, id);
        document.getElementById("main").style.backgroundImage = "url('bg_6000.png')";
      } 
