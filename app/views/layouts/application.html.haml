    %title Dobrá máma
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'swfobject.js'
    :javascript
      var flashvars = {};
      flashvars.testing = "reg";
      var params = {};
      params.menu = "false";
      params.scale = "noscale";
      params.wmode = "opaque";
      params.allowscriptaccess = "always";
      var attributes = {};
      swfobject.embedSWF("main.swf", "flashDiv", "700", "400", "9.0.24", "/images/expressInstall.swf", flashvars, params, attributes);
      //swfobject.embedSWF("swf/DobraMama_01.swf", "flashDiv", "100%", "768", "9.0.24", "/images/expressInstall.swf", flashvars, params, attributes);
    :javascript
      function openWindow(url, name, width, height, x, y) 
      {
        var params = "height=" + height + ",width=" + width + ",toolbar=1,scrollbars=1,location=1,statusbar=1,menubar=1,resizable=1,top=" + x + ",left=" + y;
        var popup = window.open(url, name, params);
        return popup != null && typeof(popup) != "undefined";
      }
  %body
